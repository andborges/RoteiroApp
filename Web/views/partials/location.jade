include menu.jade

section.container.pages
  ol.breadcrumb
    li
      a(href="/") Home
    li.active {{ location.name }}

  .panel.panel-default
    .panel-body
      .row
        .photo.col-md-3
          img.img-responsive(src="images/location/{{ location.code }}_1.jpg")
        .col-md-9
          .title
            h2 {{ location.name }}, {{ location. country }}
          .description {{ location.description }}

          .itineraries Roteiros:
            ul
              li(ng-repeat="itinerary in location.itineraries")
                a(href="itinerary/{{ itinerary.code }}") {{ itinerary.name }}